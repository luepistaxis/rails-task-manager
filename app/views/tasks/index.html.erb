<h1>Tasks</h1>
<div>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <input type="checkbox" checked>
        <% else %>
          <input type="checkbox">
        <% end %>
        <%= link_to task.title, task_path(task.id) %> Â· <%= link_to task_path(task.id), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
        </li>
    <% end %>
  </ul>
</div>

<div>
  <%= link_to new_task_path do %>
    <i class="fa-solid fa-plus"></i> Add a new task
  <% end %>
</div>
