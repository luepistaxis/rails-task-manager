<div class="d-flex">
  <h2><%= @task.title %></h2>
  <%= link_to edit_task_path do%>
  <i class="fa-solid fa-pen"></i>
<% end %>
</div>
<p><%= @task.details%></p>

<div class="d-flex">
  <% if @task.completed %>
    <i class="fa-regular fa-square-check"></i> This task is completed
  <% else %>
    <i class="fa-regular fa-square"></i> This task is not completed yet
  <% end %>
</div>
<%= link_to "back", tasks_path%>
